{
  "group/gclock": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false,
      "click-to-reveal": true
    },
    "modules": ["clock", "clock#date"]
  },

  "clock": {
    "timezone": "America/Chicago",
    "tooltip": false,
    "format": "{:%I:%M %p}"
  },

  "clock#date": {
    "timezone": "America/Chicago",
    "tooltip": false,
    "format": "{:%A, %B %d, %Y}"
  }
}
